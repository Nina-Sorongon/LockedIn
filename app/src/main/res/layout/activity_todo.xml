<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9fdfd"
    tools:context=".TodoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="76dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/SampleProject1"
                app:layout_constraintVertical_chainStyle="packed"
                app:srcCompat="@drawable/logodarkgrey"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/SampleProject1"
                android:layout_width="347dp"
                android:layout_height="336dp"
                android:layout_marginTop="60dp"
                android:background="@null"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/sampletasklist1" />

            <!-- To do list items these r hardcoded lng -nina -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/todoItem1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/SampleProject1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="399dp"
                    android:layout_height="match_parent"
                    android:padding="8dp">

                    <CheckBox
                        android:id="@+id/checkbox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:buttonTint="#212121"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/taskDescription1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Finish MOBDEVE Prototype"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/checkbox1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/dueDate1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Due Tomorrow"
                        android:textColor="#808080"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/checkbox1"
                        app:layout_constraintTop_toBottomOf="@id/taskDescription1" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- To Do list item two for chef yves tagaluto ng pancit canton -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/todoItem2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/todoItem1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <CheckBox
                        android:id="@+id/checkbox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:buttonTint="#212121"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/taskDescription2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Make Pancit Canton for NinaRose"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_bold"
                        app:layout_constraintStart_toEndOf="@id/checkbox2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/dueDate2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Due Next Week"
                        android:textColor="#808080"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintStart_toEndOf="@id/checkbox2"
                        app:layout_constraintTop_toBottomOf="@id/taskDescription2"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- To do item 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/todoItem3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/todoItem2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <CheckBox
                        android:id="@+id/checkbox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:buttonTint="#212121"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/taskDescription3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Apply for Orgs!"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_bold"
                        app:layout_constraintStart_toEndOf="@id/checkbox3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/dueDate3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Due Next Week"
                        android:textColor="#808080"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        app:layout_constraintStart_toEndOf="@id/checkbox3"
                        app:layout_constraintTop_toBottomOf="@id/taskDescription3"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <ImageButton
                android:id="@+id/addtaskbtn"
                android:layout_width="64dp"
                android:layout_height="52dp"
                android:background="@null"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/addtaskbtn"
                tools:layout_editor_absoluteY="339dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="340dp" />

            <ImageButton
                android:id="@+id/backbtn"
                android:layout_width="64dp"
                android:layout_height="52dp"
                android:background="@null"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.095"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/backbtnlight"
                tools:layout_editor_absoluteY="68dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="80dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
